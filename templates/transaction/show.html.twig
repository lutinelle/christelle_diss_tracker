{% extends 'base.html.twig' %}

{% block title %}Modifier Transaction{% endblock %}

{% block body %}
    <div class = "container">
        <!-- header -->
        <header class="row secondary-page">
            <div class="col-1">
                <a href="{{ path('app_transaction_index') }}" class="close"><i class="bi bi-x"></i></a>

            </div>
            <h1 class="col-11">
                Information de la transaction
            </h1>
        </header>


        <div class="row form-group">
            <div class="col">

                <div class="form-field input-group flex-nowrap ">
                    <span class="input-group-text no-edit">{{ transaction.currency }}</span>
                </div>
                <div class="form-field input-group flex-nowrap">
                    <span class="input-group-text no-edit" id="addon-wrapping"><i class="bi bi-coin"></i></span>
                    <span class="input-group-text show-info no-edit">{{ transaction.qty }}</span>
                </div>
                <div class="form-field input-group flex-nowrap">
                    <span class="input-group-text no-edit" id="addon-wrapping">€</span>
                    <span class="input-group-text show-info no-edit">{{ transaction.price }}</span>
                </div>
                <div  class="input-group-text show-info no-edit">
                    <i class="bi bi-arrow-right"></i> INVESTISSEMENT {{ transaction.price * transaction.qty }} €
                </div>

            </div>
            <div class="col-12 d-flex justify-content-center">
                <a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}" class=" btn btn-secondary btn-outline-dark button">Modifier transaction</a>
            </div>


        </div>

    </div>










{% endblock %}
