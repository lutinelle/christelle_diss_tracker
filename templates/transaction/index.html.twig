{% extends 'base.html.twig' %}

{% block title %}Transaction index{% endblock %}

{% block body %}
    <div class = "container">
        <!-- header -->
        <header class="row">
            <h1 class="col-6 logo">
                Crypto Tracker
            </h1>
            <div class="col-2">
                <div class="row justify-content-end">

                    <div class="col-2">
                        <a href="{{ path('app_transaction_new') }}"><i class="bi bi-plus-lg"></i></a>

                    </div>
                </div>
            </div>
        </header>

        <!-- caluclate win/loss of the day -->
        <div class="row balance">
            <div class="col">
                <!--calcul des param progress bar-->

                    {% if total >= 0 %}
                        +
                    {% endif %}
                {{ total }}
            </div>
        </div>
        <!-- table of crypto bought  -->
        <div class="row">
            <div class="col-6">
                <table class="table table-dark table-striped">
                    <tbody>
                    {% for transaction in transactions %}
                        <tr>
                            <td>logo {{ transaction.currency.symbol }} ({{ transaction.currency }})</td>
                            <td><i class="bi bi-arrow-up-right"></i><i class="bi bi-arrow-up-right"></i></td>
                            <td>
                                <a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}"><i class="bi bi-pencil-fill"></i></a>
                                <a href="{{ path('app_transaction_delete', {'id': transaction.id}) }}"><i class="bi bi-trash-fill"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>


{% endblock %}
